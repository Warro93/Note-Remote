<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteRemote" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryDark">@color/brown_200</item>
        <item name="colorAccent">@color/blue_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NoteRemote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteRemote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteRemote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>